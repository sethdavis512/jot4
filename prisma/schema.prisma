generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id    String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    name  String
}

model Block {
    id      String    @id @default(auto()) @map("_id") @db.ObjectId
    type    BlockType
    content Json
    order   Int
}

enum BlockType {
    PAGE
    CODE
    EVENT
    IMAGE
    LIST
    QUOTE
    TEXT
    VIDEO
}
